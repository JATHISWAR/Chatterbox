<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:padding="13dp"
        android:hint="Write Phone Number Here..."
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:drawableStart="@drawable/phone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_verification_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@id/phone_number_input"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:padding="16dp"
        android:hint="Write Verification Code Here..."
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        android:drawableStart="@drawable/password"
        />

    <Button
        android:id="@+id/send_verification_code_button"
        android:layout_width="match_parent"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_below="@+id/phone_verification_input"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_below="@+id/send_verification_code_button"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"
        android:layout_height="wrap_content"/>
</RelativeLayout>